@model OnlineExam.Models.Course
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var title = "Create Course";
}

<form method="post">
    <div class="row pt-3 border border-dark">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @if (Model.Id != 0)
        {
            title = "Edit Course";
        }
        <input type="hidden" asp-for="ApplicationUserId" />
        <div class="col-12 border-bottom">
            <h2 class="text-primary">@title</h2>
        </div>
        <div class="col-8 pt-4">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Name"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-8 offset-4">
                    @if (Model.Id != 0)
                    {
                        <partial name="_EditBackToListButtons" model="Model.Id" />
                    }
                    else
                    {
                        <partial name="_CreateBackToListButtons" />
                    }
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}