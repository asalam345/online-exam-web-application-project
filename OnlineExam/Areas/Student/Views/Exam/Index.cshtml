@model OnlineExam.Models.ViewModels.ExamsVM
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-student-exam">
    <div class="container border-left border-right">
        <div class="row pt-4" style="background-color:#fafafa; min-height:85vh">
            <div class="col-9">
                <div class="mb-4 p-0 shadow-sm" id="course-details">
                    <div class="card rounded bg-primary">
                        <div class="card-header text-light">
                            <h3 style="margin:0px">
                                <i class="fas fa-info-circle text-light"></i>&nbsp; About this course
                            </h3>
                        </div>
                        <div class="card-body bg-white rounded-bottom">
                            <h2 class="text-secondary">@Model.Course.Name</h2>
                            @Html.Raw(Model.Course.DescriptionDetailed)
                            <div class="text-secondary">
                                <div class="mb-2" style="font-size:medium"><i class="fas fa-user text-dark"></i>&nbsp; Created by @Model.Course.ApplicationUser.Name</div>
                                <div style="font-size:medium"><i class="fas fa-users text-dark"></i>&nbsp; @Model.CountCourseUsers Students</div>
                            </div>
                        </div>
                    </div>
                </div>

                @foreach (var exam in Model.Exams)
                {
                    <div class="mb-5">
                        <div class="col-12 mb-3 bd-callout bd-callout-danger bg-primary shadow-sm" id="exam-@exam.Id">
                            <span class="text-light" style="font-size:larger">
                                <i class="fas fa-user-edit text-light"></i>&nbsp; @exam.DateCreated.ToString("MMMM dd yyyy HH:mm")
                            </span>
                        </div>
                        <div class="card shadow-sm rounded" style="background-color:#828b93">
                            <div class="card-header p-2">
                                <h3 class="text-center text-light mb-0">@exam.Name</h3>
                            </div>
                            <div class="card-body bg-white rounded-bottom" style="">
                                <p class="card-text">@Html.Raw(exam.Details)</p>
                                <p><span class="font-weight-bold text-secondary">Start Date:</span>&nbsp;@exam.StartDate.ToString("MMMM dd yyyy HH:mm")</p>
                                <p><span class="font-weight-bold text-secondary">Duration:</span>&nbsp;@exam.Duration.Hours Hours, @exam.Duration.Minutes Minutes</p>
                                <div class="text-center">
                                    <a href="#" class="btn btn-warning rounded-0 text-dark pt-2 pb-2" style="width:130px">Begin Exam</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="col-3">
                <div class="card bg-primary shadow-sm mb-4"  style="background:none">
                    <div class="card-header border-bottom">
                        <h3 class="text-center text-light mb-0"><i class="fas fa-sitemap"></i>&nbsp; Navigation</h3>
                    </div>
                    <div class="card-body bg-white rounded-bottom p-3 pl-4">
                        @{
                            foreach (var course in Model.CoursesNavigation)
                            {
                                <div class="mb-1">
                                    <a class="text-dark font-weight-bold" asp-area="Student" asp-controller="Exam" asp-action="Index"
                                       asp-route-id="@course.Id"><i class="fas fa-shapes text-secondary"></i>&nbsp; @course.Name</a>
                                </div>
                                var exams = Model.ExamsNavigation.Where(e => e.CourseId == course.Id);
                                <div class="pl-4 mb-1">
                                    <a class="text-dark" asp-area="Student" asp-controller="Exam" asp-action="Index"
                                        asp-route-id="@course.Id" asp-fragment="course-details"><i class="fas fa-chevron-right text-secondary"></i>&nbsp; About this course</a>
                                </div>
                                foreach (var exam in exams)
                                {
                                    <div class="pl-4 mb-1">
                                        <a class="text-dark" asp-area="Student" asp-controller="Exam" asp-action="Index"
                                           asp-route-id="@course.Id" asp-fragment="exam-@exam.Id"><i class="fas fa-chevron-right text-secondary"></i>&nbsp; @exam.Name</a>
                                    </div>
                                }
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        document.getElementById("container-main").className = "container-fluid p-0";
    </script>
}

