@using OnlineExam.Utilities
@model OnlineExam.Models.ViewModels.CoursesVM

    <div class="container-main-intro">
        <div class="container">
            <div class="row">
                <div class="col-md-12 text-center">
                    <h1 style="margin-top: 80px">Create your own test</h1>
                    <h2 style="margin-bottom: 60px">The online exam builder you've been looking for</h2>
                    <h4>Courses</h4>
                    <a class="text-success" style="display:inline-block; margin-bottom:40px" href="#container-main-courses">
                        <h1 class="display-3 fas fa-angle-double-down arrow"></h1>
                    </a>
                </div>
            </div>
        </div>
    </div>
<div class="container-main-counter">
    <div class="container">
        <div class="row pt-5 pb-5 d-flex align-items-center" style="min-height:400px">
            <h1 class="col-12 text-center text-white pb-3">Numbers Speak Aloud</h1>
            <div class="col-3">
                <div class="col-12 border-thick border-primary rounded text-white text-center pt-3 pb-3 shadow">
                    <p><i class="fa fa-users" style="font-size:50px"></i></p>
                    <h2>11+</h2>
                    <h4>Users</h4>
                </div>
            </div>
            <div class="col-3">
                <div class="col-12 border-thick border-primary rounded text-white text-center pt-3 pb-3 shadow">
                    <p><i class="fas fa-shapes" style="font-size:50px"></i></p>
                    <h2>11+</h2>
                    <h4>Courses</h4>
                </div>
            </div>
            <div class="col-3">
                <div class="col-12 border-thick border-primary rounded text-white text-center pt-3 pb-3 shadow">
                    <p><i class="fas fa-clipboard-list" style="font-size:50px"></i></p>
                    <h2>11+</h2>
                    <h4>Exams</h4>
                </div>
            </div>
            <div class="col-3">
                <div class="col-12 border-thick border-primary rounded text-white text-center pt-3 pb-3 shadow">
                    <p><i class="fas fa-question-circle" style="font-size:50px"></i></p>
                    <h2>11+</h2>
                    <h4>Questions</h4>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container-main-courses p-0" id="container-main-courses">
    <div class="container pt-3">
        <h1 class="text-light text-center">Courses</h1>
        <div class="row pt-3 pb-4">
            @foreach (var course in Model.Courses)
            {
                <div class="col-md-3">
                    <div class="card mb-4 card-home border">
                        <div class="overflow-hidden rounded-top">
                            <img src="@course.ImageUrl" class="card-img-top" style="width:100%; height:225px" />
                        </div>
                        <div class="card-body text-black-50 rounded-bottom">
                            <h5 class="font-weight-bolder">@course.Name</h5>
                            <div class="d-flex justify-content-between font-weight-bold">
                                <p style="font-size:small"><i class="fas fa-user"></i>&nbsp; By @course.ApplicationUser.Name</p>
                                <p style="font-size:small">
                                    <i class="fas fa-users"></i>&nbsp;
                                    @Model.CountUsers.Where(cu => cu == course.Id).Count() Students
                                </p>
                            </div>
                            <p class="card-text text-dark home-description" style="font-family: sans-serif;">@course.DescriptionShort</p>
                            <div class="d-flex justify-content-between align-items-center">
                                @if (User.Identity.IsAuthenticated)
                                {
                                    <button type="button" class="btn btn-sm btn-success" style="width:80px" onclick="sendRequest(this, @course.Id)">Enroll</button>
                                }
                                else
                                {
                                    <button type="button" class="btn btn-sm btn-success" style="width:80px" onclick="redirectToLogin()">Enroll</button>
                                }
                                <small class="font-weight-bold">@course.DateCreated.ToString("MMM dd yyyy")</small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>


@section Scripts{
    <script src="~/js/student-home-index.js"></script>
    <script>
        document.getElementById("container-main").className = "container-fluid p-0";
    </script>
}
